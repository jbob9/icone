---
import Badge from './ui/Badge.astro';
import Card from './ui/Card.astro';

interface Props {
    id: string;
  title: string;
  excerpt: string;
  date: string;
  category: string;
  imageUrl: string;
}

const { id, title, excerpt, date, category, imageUrl } = Astro.props;
---

<a href={`/blog/${id}`} class="block hover:opacity-90 transition-opacity">
    <Card>
      <div class="aspect-[16/9] relative overflow-hidden rounded-t-lg">
        <img
          src={imageUrl}
          alt={title}
          class="object-cover w-full h-full"
        />
      </div>
      <CardHeader>
        <div class="flex justify-between items-center mb-2">
          <Badge>{category}</Badge>
          <span class="text-sm text-muted-foreground">{date}</span>
        </div>
        <CardTitle class="text-xl mb-2">{title}</CardTitle>
        <CardDescription>{excerpt}</CardDescription>
      </CardHeader>
    </Card>
</a>