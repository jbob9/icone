---

interface Props {
    id: string;
  image: string;
  title: string;
  categories: string[];
  description: string;
}

const { id,image, title, categories, description } = Astro.props;
---

<a href={`/project/${id}`} class="group">
    <div class="flex flex-col">
      <div class="mb-4 overflow-hidden rounded-lg">
        <img 
          src={image} 
          alt={title} 
          class="w-full aspect-[4/3] object-cover transition-transform duration-500 group-hover:scale-105"
        />
      </div>
      <div class="flex flex-wrap gap-2 mb-3">
        {categories.map((category) => (
          <span 
            class="text-xs px-2.5 py-1 bg-gray-200 rounded-full"
          >
            {category}
          </span>
        ))}
      </div>
      <h3 class="font-bold text-xl mb-2">{title}</h3>
      <p class="text-sm text-gray-600 leading-relaxed">{description}</p>
    </div>
</a>