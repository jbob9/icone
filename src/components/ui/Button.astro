---
import { cn } from '../../lib/utils';

interface Props {
  variant?: "primary" | "outline" | "text";
  className?: string;
  onClick?: () => void; 
}

const { variant = 'primary', className, onClick } = Astro.props;

const baseStyles = "inline-flex items-center justify-center rounded py-2 px-4 font-medium transition-colors focus:outline-none";
  
  const variantStyles = {
    primary: "bg-black text-white hover:bg-gray-800",
    outline: "border border-black text-black hover:bg-black/5",
    text: "text-black hover:underline"
  };
---

<button class={cn(baseStyles, variantStyles[variant], className)}>
    <slot/>
</button>