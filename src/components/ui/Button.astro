---
import { cn } from '../../lib/utils';

interface Props {
  variant?: "primary" | "outline" | "text";
  className?: string;
  onClick?: () => void; 
}

const { variant = 'primary', className, onClick } = Astro.props;

export const buttonBaseStyles = "inline-flex items-center justify-center rounded py-2 px-4 font-medium transition-colors focus:outline-none";
  
export const buttonVariantStyles = {
    primary: "bg-black text-white hover:bg-gray-800",
    outline: "border border-black text-black hover:bg-black/5",
    text: "text-black hover:underline"
  };

export const buttonVariants = ({ variant = 'primary' }: Props) => cn(buttonBaseStyles, buttonVariantStyles[variant]);
---

<button class={cn(buttonBaseStyles, buttonVariantStyles[variant], className)}>
    <slot/>
</button>